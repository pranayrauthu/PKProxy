{
  "name": "PKProxy",
  "version": "0.0.1",
  "description": "Extends the Developer Tools, adding tools for web applications.",
  // "devtools_page": "devtoolsBackground.html",
  "options_page": "options.html",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "icons": {
    // "16": "img/webstore-icon.png",
    // "48": "img/webstore-icon.png",
    // "128": "img/webstore-icon.png"
    "16": "img/panel-logo.PNG"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "page_action": {
    // "default_icon": {
    //   "19": "img/icon19.png",
    //   "38": "img/icon38.png"
    // },

    "default_title": "PKProxy"
  },

//   "web_accessible_resources": [
//     "dist/hint.js"
//   ],
  "minimum_chrome_version": "21.0.1180.57"
}
